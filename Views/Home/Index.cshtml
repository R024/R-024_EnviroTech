    <script type="text/javascript">
        var locations = [
            ['wedfwc', 21.412553, 39.900218, 4],
            ['ewdfw', 21.429736, 39.863912, 4],
            ['wedfw', 21.412156, 39.883567, 4],
            ['qwd', 21.424702, 39.862539, 4],
            ['revre', 21.421905, 39.867260, 4],
            ['sdc', 21.413515, 39.882623, 4],
            ['AAA', 21.415327, 39.899289, 4],
            ['BBB', 21.416825, 39.893260, 5],
            ['CCC', 21.413130, 39.888196, 3],
            ['DDD', 21.405618, 39.903645, 2],
            ['EEE', 21.4099636, 39.8855346, 1]
        ];




        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 14,
            center: new google.maps.LatLng(21.4099636, 39.8855346),
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        var infowindow = new google.maps.InfoWindow();

        var marker, i;


        for (i = 0; i < locations.length; i++) {
            marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                map: map
            });


            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                return function () {
                    infowindow.setContent(locations[i][0]);
                    infowindow.open(map, marker);
                }
            })(marker, i));

        }




    </script>







